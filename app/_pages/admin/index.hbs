{{#extend "layout" page="admin"
  title="E-Gram Admin"
  description="Description"
}}

{{#content "body" }}
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Admin E Grams</h1>
    </div>
  </div>

  <div class="row">
      	<form class="form-horizontal">
          <div class="form-group">
            <div class="col-sm-6">
              <input type="text" class="form-control" id="inputFirstName" placeholder="First Name">
            </div>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="inputLastName" placeholder="Last Name">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email Address">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <input type="email" class="form-control" id="inputVerifyEmail" placeholder="Verify Email Address">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <input type="number" class="form-control" id="inputEgrams" placeholder="" min="1" max="100">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-5 col-sm-2">
              <button type="submit" class="btn btn-default">Submit</button>
            </div>
          </div>
        </form>
  </div>
</div>
{{/content}}
{{/extend}}
