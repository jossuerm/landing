<div class="no-gutters row isi {{ location }}">
  <div class="isi-content">
    <div class="isi-header">
      {{#ifEquals location "tray"}}
        <h1>Important safety information</h1>
      {{/ifEquals}}

      {{#ifEquals location "persistent-bottom"}}
        <h1>Bottom Important safety information</h1>
      {{/ifEquals}}
    </div>

    <div class="main-content scroll-wrapper">
      <div>
        <p><b>{{ global.isi.title }}</b></p>
        <p>{{ global.isi.content.paragraph_1 }}</p>
        <ul>
          {{#each global.isi.content.list_1}}
            <li>{{ this }}</li>
          {{/each}}
        </ul>
        <p>{{ global.isi.content.paragraph_1 }}</p>
        <ul>
          {{#each global.isi.content.list_1}}
            <li>{{ this }}</li>
          {{/each}}
        </ul>
        <p>{{ global.isi.content.paragraph_1 }}</p>
      </div>
    </div>
  </div>
</div>
